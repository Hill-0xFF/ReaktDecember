{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "eslint-plugin-import-helpers",
    "unused-imports"
  ],
  "rules": {
    "unused-imports/no-unused-imports": 2,
    "react/react-in-jsx-scope": "off",
    // "react/jsx-one-expression-per-line": [
    //   "error",
    //   {
    //     "allow": "off"
    //   }
    // ],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "/^react/",
          "/^/vite/",
          "/^@mui/",
          "/^formik/",
          "/^yup/",
          "/^@/interfaces/",
          "/^@/enums/",
          "/^@/types/",
          "/^@/redux/",
          "/^@/components/",
          "/^@/hooks/",
          "/^@/requests/",
          "/^@/pages/",
          "/^@/schemas/",
          "/^@/utils/",
          "/^@/styles/",
          "/^@/mui/",
          "/^@/assets/",
          ["module"],
          ["/^~//"],
          ["parent", "sibling", "index"]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ]
  }
}
